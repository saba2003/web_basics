{{!-- <img src="/images/uploads/users_profile_images/{{user.photo}}" /> --}}

<div class="row" style = "padding-top: 20px;">
    <div class="col s12">
        <ul class="tabs">
            <li class="tab col s6"><a class ="active" href="#completed_todos">Completed Todos</a></li>
            <li class="tab col s6"><a href="#active_todos">Active Todos</a></li>
        </ul>
    </div>
    
    <div id="completed_todos" class="col s12">
        {{#if cTodos.length}}
            <ul>
                {{#each cTodos}}
                    <li class = "todo">
                        {{!-- submit ღილაკის დაჭერით -> action მისამართზე -> method ფუნქციას აგზავნის --}}
                        <form action="/todo/change_status" method="POST">
                            <label>
                                {{#if completed}}
                                    <input name="completed_status" type="checkbox" checked />

                                    <span class="completed">{{title}}</span>
                                {{else}}
                                    <input name="completed_status" type="checkbox" />

                                    <span>{{title}}</span>
                                {{/if}}

                                <input type = "hidden" name="id" value="{{_id}}" />

                                <button type="submit" class="btn btn-small waves-effect">SAVE</button>
                                
                            </label>
                        </form>

                        <form action="/todo/delete_todo" method="POST">
                            <input type = "hidden" name="id" value="{{_id}}" />
                            <button type="submit" class="btn delete red accent-3 btn-small waves-effect">DELETE</button>
                        </form>
                        
                    </li>
                {{/each}}
            </ul>

        {{else}}
            <p>EMPTY ARRAY</p>
        {{/if}}
    </div>

    <div id="active_todos" class="col s12">
        {{#if aTodos.length}}
            <ul>
                {{#each aTodos}}
                    <li class = "todo">
                        {{!-- submit ღილაკის დაჭერით -> action მისამართზე -> method ფუნქციას აგზავნის --}}
                        <form action="/todo/change_status" method="POST">
                            <label>
                                {{#if completed}}
                                    <input name="completed_status" type="checkbox" checked />

                                    <span class="completed">{{title}}</span>
                                {{else}}
                                    <input name="completed_status" type="checkbox" />

                                    <span>{{title}}</span>
                                {{/if}}

                                <input type = "hidden" name="id" value="{{_id}}" />

                                <button type="submit" class="btn btn-small waves-effect">SAVE</button>
                                
                            </label>
                        </form>
                        
                    </li>
                {{/each}}
            </ul>

        {{else}}
            <p>EMPTY ARRAY</p>
        {{/if}}
    </div>
</div>

<div class="row auth-row">
    <div class="col z-depth-2 auth-box">

        <div class="col s6 auth-image-box">
            <img src="/images/auth_pic.jpeg" class="auth-image" />
        </div>

        <div class="col s6">
            <form action="/authentication/registration" method="POST" enctype="multipart/form-data">
                <h4 class="center-align auth-form-title">Registration Form</h4>

                {{#if error.length}}
                    <div class="error-flash-container z-depth-2 col s10 offset-s1">
                        <p class="error-flash-text center-align">{{error}}</p>
                    </div>
                {{/if}}

                <div class="input-field col s10 offset-s1">
                    <input id="first_name" type="text" name="first_name" />
                    <label for="first_name">First Name</label>
                </div>

                <div class="input-field col s10 offset-s1">
                    <input id="last_name" type="text" name="last_name" />
                    <label for="last_name">Last Name</label>
                </div>

                <div class="input-field col s10 offset-s1">
                    <input id="birth_date" type="text" class="datepicker" name="birth_date">
                    <label for="birth_date">Birth Date</label>
                </div>

                <div class="input-field col s10 offset-s1">
                    <input id="email" type="email" name="email" />
                    <label for="email">Email</label>
                </div>

                <div class="file-field col s10 offset-s1">
                    <div class="btn">
                        <span>PROFILE PHOTO</span>
                        <input type="file" name="photo" />
                    </div>

                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text">
                    </div>
                </div>

                <div class="input-field col s10 offset-s1">
                    <input id="password" type="password" name="password" />
                    <label for="password">Password</label>
                </div>

                <div class="input-field col s10 offset-s1">
                    <input id="confirm_password" type="password" name="confirm_password" />
                    <label for="confirm_password">Confirm Password</label>
                </div>

                <button type="submit" class="btn-large waves-effect waves-light grey darken-3 submit-button">
                    Registration
                    <i class="material-icons right">send</i>
                </button>

            </form>
        </div>

    </div>
</div>